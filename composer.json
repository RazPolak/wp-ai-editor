{
  "name": "wordpress/mcp-poc",
  "description": "WordPress MCP POC with official adapter",
  "type": "project",
  "require": {
    "php": ">=7.4",
    "composer/installers": "^2.0",
    "wordpress/abilities-api": "dev-trunk",
    "wordpress/mcp-adapter": "dev-trunk"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/WordPress/abilities-api.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/WordPress/mcp-adapter.git"
    }
  ],
  "extra": {
    "installer-paths": {
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
