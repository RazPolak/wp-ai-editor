# WordPress MCP Connection (Sandbox)
WORDPRESS_MCP_URL=http://localhost:8000/wp-json/wordpress-poc/mcp
WORDPRESS_MCP_USERNAME=admin
WORDPRESS_MCP_PASSWORD=get_from_mcp_credentials_file

# Production WordPress MCP Connection
WORDPRESS_PRODUCTION_MCP_URL=http://localhost:8001/wp-json/wordpress-poc/mcp
WORDPRESS_PRODUCTION_MCP_USERNAME=admin
WORDPRESS_PRODUCTION_MCP_PASSWORD=get_from_production_setup_script

# AI Provider Configuration
# Choose 'openai' or 'anthropic' (defaults to 'anthropic' if ANTHROPIC_API_KEY is set)
AI_PROVIDER=anthropic

# OpenAI API Key (required if AI_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (required if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here